.POSIX:

include config.mk

.SUFFIXES:
.SUFFIXES: .c .o

.c.o:
	$(CC) $(CFLAGS) -o $@ -c $<

default: all

dist: clean
	./bootstrap
	@mkdir -p astral-box-$(VERSION)
	@cp -R COPYING configure Makefile README src doc test astral-box-$(VERSION)
	@pax -wf astral-box-$(VERSION).tar astral-box-$(VERSION)
	@rm -rf astral-box-$(VERSION)
	@gzip -k astral-box-$(VERSION).tar
	@xz astral-box-$(VERSION).tar
